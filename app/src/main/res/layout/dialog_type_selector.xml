<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageSwitcher
        android:id="@+id/img_type_switcher"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/img_next_type"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/img_type_switcher"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:layout_marginLeft="@dimen/max_margin"
        android:layout_toRightOf="@id/img_type_switcher"
        app:srcCompat="@drawable/ic_next" />

    <ImageView
        android:id="@+id/img_previous_type"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@id/img_type_switcher"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:layout_marginRight="@dimen/max_margin"
        android:layout_toLeftOf="@id/img_type_switcher"
        app:srcCompat="@drawable/ic_prev" />

</RelativeLayout>